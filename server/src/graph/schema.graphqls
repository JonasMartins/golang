# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
  id: String!
  name: String!
  email: String!
  password: String!
}

type RegisterUserResponse {
  token: String!
  id: String!
  name: String!
}

type Query {
  users(limit: Int, offset: Int): [User!]!
}

input RegisterUserInput {
  name: String!
  email: String!
  password: String!
}

type Mutation {
  registerUser(input: RegisterUserInput!): RegisterUserResponse!
}
